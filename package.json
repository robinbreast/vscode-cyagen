{
  "name": "vscode-cyagen",
  "displayName": "vscode-cyagen",
  "description": "",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "publisher": "robinbreast",
  "license": "MIT",
  "author": {
    "name": "Kihoa Nam",
    "email": "robinbreast1412@gamil.com"
  },
  "activationEvents": [
    "onLanguage:c",
    "explorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-cyagen.generate",
        "category": "Cyagen",
        "group": "cyagen",
        "title": "generate files using templates"
      },
      {
        "command": "vscode-cyagen.openFolderInWSL",
        "category": "Cyagen",
        "group": "cyagen",
        "title": "Open folder in WSL"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-cyagen.openFolderInWSL",
          "group": "cyagen",
          "when": "explorerResourceIsFolder"
        }
      ]
    },
    "languages": [
      {
        "id": "c",
        "extensions": [
          ".c"
        ]
      }
    ],
    "configuration": {
      "title": "Cyagen configuration",
      "properties": {
        "vscode-cyagen.localStaticVariableMacroName": {
          "type": "string",
          "default": "LOCAL_STATIC_VARIABLE",
          "description": "macro name for local static variable declaration"
        },
        "vscode-cyagen.templates": {
          "type": "array",
          "default": [
            {
              "label": "gtest",
              "templateFolder": "${extensionPath}/resources/templates/gtest",
              "outputFolder": "${fileDirname}/../tst/gtest/test_@sourcename@"
            },
            {
              "label": "cantata",
              "templateFolder": "${extensionPath}/resources/templates/cantata",
              "outputFolder": "${fileDirname}/../tst/ut/ut_@sourcename@"
            }
          ],
          "description": "templates to render the identifiers in the current C file"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/nunjucks": "^3.2.2",
    "@types/vscode": "^1.54.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "nunjucks": "^3.2.4",
    "uuid": "^9.0.0"
  },
  "files": [
    "resources/templates/gtest/*.njk"
  ],
  "repository": {
    "type": "git",
    "uri": "https://github.com/robinbreast/vscode-cyagen"
  }
}